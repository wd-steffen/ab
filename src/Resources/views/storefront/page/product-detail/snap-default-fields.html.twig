            {% endblock %}

            {% block snap_page_product_detail_length %}
                <span class="product-detail-value snap-product-detail-length"
                    itemprop="sku">
                    {{ page.product.length }} cm
                </span>
            {% endblock %}
        </div>
    {% endif %}

    {# SnapTheme: Add width #}
    {% if page.product.width and snapDefaultProductDetailWidthShow == 2 %}
        <div class="snap-detail-container snap-product-detail-width-container">
