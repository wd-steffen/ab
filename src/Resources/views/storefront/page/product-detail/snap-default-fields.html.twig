{# ---------------- START: SET TEMPLATE VARS ---------------- #}

{# Set theme variables #}
{% set snapDefaultProductDetailWeightShow = theme_config('snap-default-product-detail-weight-show') %}
{% set snapDefaultProductDetailLengthShow = theme_config('snap-default-product-detail-length-show') %}
{% set snapDefaultProductDetailHeightShow = theme_config('snap-default-product-detail-height-show') %}
{% set snapDefaultProductDetailWidthShow = theme_config('snap-default-product-detail-width-show') %}

{# ---------------- END: SET TEMPLATE VARS ---------------- #}

    {# SnapTheme: Add weight #}
    {% if page.product.weight and snapDefaultProductDetailWeightShow == 2 %}
        <div class="snap-detail-container snap-product-detail-weight-container">
            {% block snap_page_product_detail_weight_label %}
                <span class="product-detail-label snap-product-detail-weight-label">
                    {{ "snap.detail.weightLabel"|trans|sw_sanitize }}
                </span>
            {% endblock %}

            {% block snap_page_product_detail_weight %}
                <span class="product-detail-value snap-product-detail-weight"
                    itemprop="sku">
                    {{ page.product.weight }} kg
                </span>
            {% endblock %}
        </div>
    {% endif %}

    {# SnapTheme: Add length #}
    {% if page.product.length and snapDefaultProductDetailLengthShow == 2 %}
        <div class="snap-detail-container snap-product-detail-length-container">
            {% block snap_page_product_detail_length_label %}
