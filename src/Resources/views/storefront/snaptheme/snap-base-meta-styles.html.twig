{# SnapTheme: Inline styles #}
{% block snap_layout_head_style %}

	{% if  
		snapBodyBgImageShow == 2 or 
		snapNewsletterBgImageShow == 2 or 
		snapFooterMainSectionBgImageShow == 2 %}

		<style>
			{% apply spaceless %}
				{# SnapTheme: Add background image to body #}
				{% if snapBodyBgImageShow == 2 and snapBodyBgImage != "" and snapBodyBgImage != "none" %}
					.content-main{background-image:url({{ snapBodyBgImage|sw_encode_url }});}
				{% endif %}

				{# SnapTheme: Add background image to newsletter #}
				{% if snapNewsletterBgImageShow == 2 and snapNewsletterBgImage != "" and snapNewsletterBgImage != "none" %}
					div.main-newsletter{background-image:url({{ snapNewsletterBgImage|sw_encode_url }});}
				{% endif %}

				{# SnapTheme: Add background image to footer #}
				{% if snapFooterMainSectionBgImageShow == 2 and snapFooterMainSectionBgImage != "" and snapFooterMainSectionBgImage != "none" %}
					footer.footer-main{background-image:url({{ snapFooterMainSectionBgImage|sw_encode_url }});}
				{% endif %}
			{% endapply %}
		</style>
	{% endif %}
{% endblock %}